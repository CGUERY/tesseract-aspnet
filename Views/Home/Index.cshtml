@using System.Web.UI.WebControls
@using Microsoft.Ajax.Utilities
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
   
      
            <fieldset>
                <legend>File Upload</legend>
                @using (Html.BeginForm("Submit", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label for="imageFile" >File:</label>
                        <input class="form-control" type="file" name="file" />
                        <span class="help-block">The file to be processed.</span>
                    </div>

                   <input type="submit" class="btn btn-default" name="Submit" value="Submit" />
                }

               
            </fieldset>
 

            @if (ViewBag.ShowResult)
            {
                <fieldset>
                    <legend>OCR Results</legend>
                    <div class="form-group">
                        <label for="result">Mean Confidence:</label>
                        <label class="form-control">@ViewBag.MeansConfidence</label>
                    </div>
                    <div class="form-group">
                        <label for="result">Result:</label>
                        <textarea class="form-control" rows="10" readonly="readonly">@ViewBag.Result</textarea>
                    </div>
                   
                </fieldset>
            }
    
       
   
</div>
